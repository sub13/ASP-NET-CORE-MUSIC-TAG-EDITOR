@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model MusicTagEditor.ViewModels.Auth.LoginViewModel

@{
    Layout = "~/Views/Auth/Shared/_LayoutAuth.cshtml";
}

<div class="container align-content-center h-50 w-50 p-3">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">@Localizer["Authorization"]</h1>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Email" class="form-control" id="exampleInputEmail1">@Localizer["EnterEmail"]</label>
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-control" id="exampleInputEmail1">@Localizer["EnterPassword"]</label>
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@Localizer["SignIn"]" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            <a class="card-link" asp-action="Register" asp-controller="Auth">@Localizer["SignUp"]</a>
        </div>
    </div>
</div>
